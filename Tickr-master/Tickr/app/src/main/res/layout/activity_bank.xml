<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#241623"
    tools:context="com.example.charlie.tickr.Bank">


    <RelativeLayout
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="712dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/Display_name"
            android:layout_width="368dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Name Display Here"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="34dp" />

        <ListView
            android:id="@+id/user_list"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_above="@+id/Home"
            android:background="#FFA000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Home"
            android:layout_width="131dp"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="196dp"
            android:background="#83B692"
            android:bottomRightRadius="8dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Crypto" />

        <Button
            android:id="@+id/Stock1"
            android:layout_width="116dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_list"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#ED254E"
            android:text="Stock"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Crypto" />

        <Button
            android:id="@+id/Crypto"
            android:layout_width="137dp"
            android:layout_height="61dp"
            android:layout_below="@+id/user_list"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_toEndOf="@+id/Home"
            android:background="#0066FF"
            android:text="Cryptocurrency"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
