<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charlie.tickr.Stock"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/profile"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/profile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/ChooseStock"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:ems="10"
            android:text="@string/ChooseStock"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="314dp" />

        <Spinner
            android:id="@+id/DropDown"
            android:layout_width="204dp"
            android:layout_height="41dp"
            android:entries="@array/DropDown" />


    </LinearLayout>

    <TextView
        android:id="@+id/StockPrice"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="StockPrice"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/NumStock"
            android:layout_width="127dp"
            android:layout_height="54dp"
            android:ems="10"
            android:text="@string/NumStock"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="314dp"
            android:layout_weight="0.95" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>



    <Button
        android:id="@+id/FindStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FindStockPrices"
        />

    <TextView
        android:id="@+id/StockDrop"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="StockPrice"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"

        />




</LinearLayout>

</android.support.constraint.ConstraintLayout>
